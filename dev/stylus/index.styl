.main
	width 100%
	.bannerBox
		width 100%
		position relative
		.banner
			position relative
			width 100%
			height 650px
			box-shadow 1px 1px 3px 1px rgba(0,0,0,.3)
			.bigImg
				position absolute
				top 0
				left 0
				z-index 0
				width 100%
				height 100%
				opacity 0
				&.br
					background-image url(../img/big-1.png)
				&.by
					background-image url(../img/big-2.png)
				&.bb
					background-image url(../img/big-3.png)
				&.show
					z-index 1
					opacity 1
					transition all 1s
		.imgBtn
			position absolute
			left 0
			bottom 0
			z-index 3
			width 100%
			height 200px
			background-color rgba(0,0,0,.6)
			.btnBox
				width 100%
				height 200px
				padding-top 40px
				.minImg
					float left
					width 180px
					height 120px
					margin 0 70px 0 70px
					.resultBox
						width 100%
						height 100%
						background-color rgba(0,0,0,.7)
						box-shadow 1px 1px 3px 1px rgba(0,0,0,.3)
						&.relative
							background-color rgba(0,0,0,0)
							box-shadow 0 0 20px 3px rgba(255,255,255,.3)
					&.red
						background-image url(../img/min-1.png)
					&.yellow
						background-image url(../img/min-2.png)
					&.blue
						background-image url(../img/min-3.png)
	.itemBox
		width 100%
		padding-top 70px
		padding-bottom 70px
		overflow hidden
		.items
			float left
			margin-left 15px
			width 300px
			.itemImg
				display block
				width 300px
				overflow hidden
				&.p1
					border-bottom 5px solid #e13e59
				&.p2
					border-bottom 5px solid #ed9e21
				&.p3
					border-bottom 5px solid #f884cb
			.itemText
				position relative
				width 300px
				height 190px
				padding-top 28px
				.textTop
					width 100%
					overflow hidden
					.iconNews
						float left
						width 20px
						height 16px
					.text
						float left
						margin-left 12px
						line-height 16px
						font-size 14px
						color #014145
				.textTitle
					display block
					margin-top 10px
					width 100%
					overflow hidden
					font-size 14px
					color #014145
					font-weight bold
					white-space nowrap
					text-overflow ellipsis
					&:hover
						text-decoration underline
				.mainText
					margin-top 8px
					width 100%
					overflow hidden
					font-size 12px
					color #014145
				.itemBottem
					width 100%
					overflow hidden
					position absolute
					bottom 0
					left 0
					.textMore
						display block
						float left
						font-size 14px
						color #830000
						&:hover
							text-decoration underline
					.iconMore
						float left
						margin-left 7px
						margin-top 5px
						width 14px
						height 14px
			