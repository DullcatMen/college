.main_login
	width 100%
	overflow hidden
	.topBg
		width 100%
		overflow hidden
		img
			display block
			width 100%
	.bottomBox
		width 100%
		.outerBox
			width 100%
			height 600px
			overflow hidden
			position relative
			top -60px
			.loginBox
				position absolute
				top 0
				left 0
				z-index 33
				width 230px
				height 380px
				background-color #00747c
				.topBox
					width 100%
					height 60px
					background-color #009fab
					color #fff
					font-size 20px
					line-height 60px
					padding-left 40px
				.loginNav
					position relative
					width 100%
					height 60px
					display block
					padding-left 40px
					line-height 60px
					color #fff
					font-size 16px
					background-color #03646a
					&:hover
						background-color #014145
					&.student
						// background-color #014145
						.iconS
							width 18px
							height 18px
							background-image url(../img/iconS.png)
							position absolute
							top 21px	
							left 10px
					&.teacher
						// background-color #03646a
						.iconT
							width 15px
							height 17px
							background-image url(../img/iconT.png)
							position absolute
							top 21px	
							left 10px
					.iconr
						width 7px
						height 12px
						background-image url(../img/iconr.png)
						position absolute
						top 25px	
						right 20px
				.inputBox
					width 100%
					overflow hidden
					padding-left 10px
					padding-top 10px
					.topTxt
						color #fff
						font-size 16px
					.inputBlock
						overflow hidden
						margin-top 14px
						.iconBox
							float left
							width 35px
							height 35px
							background-color #03646a
							&.iuser
								background-image url(../img/icon-user.png)
								background-repeat no-repeat
								background-position center
							&.ipass
								background-image url(../img/icon-lock.png)
								background-repeat no-repeat
								background-position center
						.inputs
							float left
							width 165px
							height 35px
							background-color #fff
							padding-left 12px
							font-size 14px
					.btnLogin
						display block
						margin-top 12px
						width 200px
						height 35px
						background-color #03646a
						color #fff
						font-size 14px
						line-height 35px
						text-align center
						&:hover
							background-color #014145
						
			.rightPart
				position absolute
				top 0
				right 0
				width 650px
				height 600px
				.rightTop
					color #fff
					width 100%
					height 60px
					background-color #009fab
					.rTip
						float left
						font-size 20px
						width 100px
						height 60px
						background-color #017980
						line-height 60px
						text-align center
						margin-left 40px
					.rNav
						float right
						line-height 60px
						font-size 12px
						margin-right 20px
						a:hover
							text-decoration underline
				.rightBottom
					width 100%
					overflow hidden
					padding-left 40px
					padding-top 50px
					.message
						width 100px
						height 35px
						border-left 2px solid #014145
						line-height 35px
						text-align center
						color #014145
						font-size 18px
					.btnBox
						overflow hidden
						margin-top 24px
						margin-bottom 10px
						.btns
							display block
							float left
							width 80px
							height 35px
							line-height 35px
							color #fff
							font-size 12px
							text-align center
							background-color #03646a
							&:hover
								background-color #014145
							&.clickOn
								background-color #014145
					.list-box
						width 590px
						overflow hidden
						display none
						&.liShow
							display block
						.list-items
							overflow hidden
							margin-top 10px
							width 500px
							height 35px
							color #262626
							font-size 12px
							border-bottom 1px solid #c9c9c9
							.leftTtile
								display block
								float left
								line-height 35px
								&:hover
									text-decoration underline
							.rightDate
								float right
								line-height 35px
							&.lookMore
								height 65px
								i
									width 12px
									height 12px
									display block
									float right
									margin-left 10px
									margin-top 11px
									background-image url(../img/icon-lmore.png)
					.partBox
						width 500px
						height 90px
						overflow hidden
						border-bottom 1px solid #c9c9c9
						.message.bot
							float left
							margin-top 28px
						.message.bot.servise
							width 120px
						.li-partBox
							float left
							margin-left 30px
							color #262626
							line-height 90px
							font-size 12px
							&.serviseP
								margin-left 10px
							a:hover
								text-decoration underline
						
							
							